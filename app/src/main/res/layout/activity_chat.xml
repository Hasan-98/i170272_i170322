<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/catactv"
    tools:context=".ChatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/catactv"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRv"
        android:layout_width="408dp"
        android:layout_height="642dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <EditText
        android:hint="Type your message here..."
        android:id="@+id/chatText"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatRv"
        />

    <ImageView
        android:id="@+id/chatSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:clickable="true"
        app:layout_constraintRight_toRightOf="@+id/chatText"
        app:layout_constraintBottom_toBottomOf="@+id/chatText"/>

</androidx.constraintlayout.widget.ConstraintLayout>